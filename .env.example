# Environment Configuration Template
# Copy to .env and fill in your values

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Google Cloud Settings
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account.json

# API Keys (stored in Google Secret Manager in production)
LINE_CHANNEL_ACCESS_TOKEN=your-line-channel-access-token
LINE_CHANNEL_SECRET=your-line-channel-secret
GEMINI_API_KEY=your-gemini-api-key
OPENAI_API_KEY=your-openai-api-key

# Admin UI Settings
JWT_SECRET_KEY=your-jwt-secret-key
ADMIN_USERNAME=admin
ADMIN_PASSWORD=secure-password

# Application URLs
WEBHOOK_URL=https://your-domain.com/webhook
ADMIN_UI_URL=http://localhost:3000

# Feature Flags
ENABLE_CACHING=true
ENABLE_ANALYTICS=true
ENABLE_CUSTOMER_MANAGEMENT=true
ENABLE_INSTRUCTION_SYSTEM=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Cache Settings
CACHE_TTL_SECONDS=604800
CACHE_MAX_ENTRIES=10000
SEMANTIC_SIMILARITY_THRESHOLD=0.85

# Customer Management
CUSTOMER_DATA_RETENTION_DAYS=2555  # 7 years
AUTO_EXTRACT_CUSTOMER_INFO=true

# AI Provider Settings
PRIMARY_AI_PROVIDER=gemini
ENABLE_FALLBACK_PROVIDERS=true
MAX_TOKENS_DEFAULT=2048
TEMPERATURE_DEFAULT=0.7